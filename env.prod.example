# CredTravels - Production Environment Variables
# Memory: 1 GB max
# Copy this file to .env and update with your production values

# Database Configuration
MYSQL_ROOT_PASSWORD=your-secure-root-password-here
MYSQL_USER=credtravels
MYSQL_PASSWORD=your-secure-db-password-here

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here

# JWT Configuration
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-here-minimum-256-bits
JWT_EXPIRATION=86400000

# Database URLs (optional - will use defaults if not set)
INVENTORY_DB_URL=jdbc:mysql://mysql-inventory:3306/inventory_db?useSSL=true&allowPublicKeyRetrieval=false&serverTimezone=UTC
FLIGHTS_INFO_DB_URL=jdbc:mysql://mysql-flights-info:3306/flights_info_db?useSSL=true&allowPublicKeyRetrieval=false&serverTimezone=UTC
SEARCH_DB_URL=jdbc:mysql://mysql-search:3306/search_db?useSSL=true&allowPublicKeyRetrieval=false&serverTimezone=UTC
BOOKING_DB_URL=jdbc:mysql://mysql-booking:3306/booking_db?useSSL=true&allowPublicKeyRetrieval=false&serverTimezone=UTC

# Application Configuration
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# Memory Configuration
JAVA_OPTS=-Xms512m -Xmx1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200

# Logging Configuration
LOGGING_LEVEL_COM_CREDTRAVELS=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=WARN
